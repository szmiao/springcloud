<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.adm.sys.dao.TAdmSysUserDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.adm.sys.entity.TAdmSysUserEntity" id="tAdmUserPasswordMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="realName" column="real_name"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="mobile" column="mobile"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column">
        id, username, real_name, password, salt, mobile, status, create_time, update_time
    </sql>

    <select id="queryUser" resultType="com.adm.sys.entity.TAdmSysUserEntity">
        select
        <include refid="Base_Column"/>
        from
        t_user
        where id = #{userId}
    </select>

    <select id="queryByName" resultType="com.adm.sys.entity.TAdmSysUserEntity">
        select
        <include refid="Base_Column"/>
        from
        t_user
        where username = #{name}
    </select>
</mapper>