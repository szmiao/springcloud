<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.adm.sys.dao.TAdmSysUserTokenDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.adm.sys.entity.TAdmSysUserTokenEntity" id="tAdmUserPasswordMap">
        <result property="userId" column="user_id"/>
        <result property="token" column="token"/>
        <result property="expireTime" column="expire_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="BaseColumn">
        user_id, token, expire_time, update_time
    </sql>

    <select id="queryByToken" resultType="com.adm.sys.entity.TAdmSysUserTokenEntity">
        select
        <include refid="BaseColumn"/>
        from
        t_adm_sys_user_token
        where token = #{accessToken}
    </select>

    <select id="queryByUserId" resultType="com.adm.sys.entity.TAdmSysUserTokenEntity">
        select
        <include refid="BaseColumn"/>
        from
        t_adm_sys_user_token
        where user_id = #{userId}
    </select>

    <insert id="save">
        insert into t_adm_sys_user_token
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="token != null">
                token,
            </if>
            <if test="expireTime != null">
                expire_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="token != null">
                #{token},
            </if>
            <if test="expireTime != null">
                #{expireTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
        </trim>
    </insert>

    <update id="update">
        update t_adm_sys_user_token
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="token != null">
                token = #{token},
            </if>
            <if test="expireTime != null">
                expire_time = #{expireTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where user_id = #{userId}
    </update>
</mapper>